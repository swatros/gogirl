<div class = "wrapper-home">
  <% if user_signed_in? %>
    <% if current_user.avatar.attached? %>
      <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle avatar-home", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
    <% else %>
      <%= image_tag "Women Power - Avatar.png", class: "avatar dropdown-toggle avatar-home", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
    <% end %>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
      <%= link_to "My profile",  edit_user_registration_path, class: "dropdown-item" %>
      <%= link_to "Log out",   destroy_user_session_path, method: :delete, class: "dropdown-item" %>
    </div>
  <% end %>
  <%# Autocomplete input forms and button %>
  <div class="home-div-inputs">
    <%= simple_form_for Journey.new do |f| %>
        <input name="origin" class="home-input-location" id = "home-input-start" placeholder= "Start location">
        <input name="destination" class="home-input-location" id = "home-input-destination" placeholder= "Destination" >
        <%= f.input :share_location, as: :boolean %>
        <button type="submit" class="button-blue"> GO GIRL </button>
    <% end %>
  </div>

  <%# Pattern %>
  <%= image_tag "navyhomepattern.svg", class: "home-page-pattern" %>

 <%# Flag card  %>
  <%= link_to new_incident_path(@incident) do %>
    <div class = "home-flag-card">
      <p> Flag an incident </p>
      <span class="iconify button-flag" data-icon="el:flag-alt" style="color: #29353D;"></span>
    </div>
  <% end %>
</div>
